@model IEnumerable<MVC_RecursionPermission.Models.Member>

@{
    ViewBag.Title = "權限人員設定";
}

<h2>權限人員設定</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
